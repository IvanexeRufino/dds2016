{{#partial "content"}}

{{#with poi}}

<form action="/admin/POIS/modificar/{{id}}" method="POST" class="form-horizontal">
<div class="panel panel-default">
  <div class="panel-heading" alin><span class="glyphicon glyphicon-globe"></span>   {{nombre}} </div>
  
	<div class="panel-body">
			 
			 <div class="form-group">
				<label for="nombre" class="control-label col-sm-2"> Nombre: </label>
				<div class="col-sm-6"> 
					<input type="text" class="form-control" value={{name}} name="nombre">
				</div>
			</div>
			
			<div class="form-group">
				 <div class="form-group">
					<label for="latitud" class="control-label col-sm-2"> Latitud: </label>
					<div class="col-sm-2"> 
						<input type="number" class="form-control" value={{latitude}} name="latitude">
					</div>
				<label for="longitud" class="control-label col-sm-2"> Longitud: </label>
				<div class="col-sm-2"> 
					<input type="number" class="form-control" value={{longitude}} name="longitude">
				</div>
				</div>
			</div>
	</div>

	 <div class="panel-footer text-right">
	 	<button class="btn btn-default" type="submit">Modificar</button>
	 	<a href="/admin" button class="btn btn-default">Cancelar</button>
	</div>

</div> 
</form>
{{/with}}

{{/partial}}

{{>layout_admin.hbs}}
