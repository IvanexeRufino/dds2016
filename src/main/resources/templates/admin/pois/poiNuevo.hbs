{{#partial "content"}}

<form action="/admin/POIS/Agregar" method="POST" class="form-horizontal">
<div class="panel panel-default">
  <div class="panel-heading" alin><span class="glyphicon glyphicon-floppy-disk"></span>   Agregar POI</div>
  
	<div class="panel-body">
	
			 <div class="form-group">
				<label for="nombre" class="control-label col-sm-2"> Nombre: </label>
				<div class="col-sm-6"> 
					<input type="text" class="form-control" name="nombre" required>
				</div>
			</div>
			
			<div class="form-group">
				<label for="tipo" class="control-label col-sm-2"> Tipo </label>
				<div class="col-sm-3"> 
				<select class="form-control" name="tipo">
					<option value=Banco>Banco</option>
					<option value=CGP>CGP</option>
					<option value=Local>Local</option>
					<option value=ParadaColectivo>Parada Colectivo</option>
				</select> 
				</div>
			</div>
			
				<div class="form-group">
				 <div class="form-group">
					<label for="latitud" class="control-label col-sm-2"> Latitud: </label>
					<div class="col-sm-2"> 
						<input type="number" class="form-control" name="lat" required>
					</div>
				<label for="longitud" class="control-label col-sm-2"> Longitud: </label>
				<div class="col-sm-2"> 
					<input type="number" class="form-control" name="long" required>
				</div>
				</div>
			</div>
			
			
	</div>
	 <div class="panel-footer text-right">
	 	<button class="btn btn-success" type="submit">Agregar</button>
	 	<a href="/admin" class="btn btn-warning">Cancelar</a>
	</div>
</form>
{{/partial}}
{{>layout_admin.hbs}}