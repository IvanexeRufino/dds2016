{{#partial "content"}}

<form action="/admin/terminales/Agregar" method="POST" class="form-horizontal">
	<div class="panel panel-default">
			<div class="panel-heading" alin><span class="glyphicon glyphicon-floppy-disk"></span>   Agregar Terminal</div>

		<div class="panel-body">

				<div class="form-group">
					<label for="nombre" class="control-label col-sm-2"> Nombre: </label>
					<div class="col-sm-4">
						<input type="text" class="form-control" placeholder="nombre" name="nombre">
					</div>
				</div>

				<div class="form-group">
					<label for="comuna" class="control-label col-sm-2"> Comuna: </label>
					<div class="col-sm-4">
						<input type="text" class="form-control" placeholder="comuna" name="comuna">
					</div>
				</div>
				
				<div class="form-group">
					<label for="contraseña" class="control-label col-sm-2"> Contrase&ntilde;a: </label>
					<div class="col-sm-4">
						<input type="text" class="form-control" placeholder="password" name="pass">
					</div>
				</div>

				<div class="form-group">
					<label for="acciones" class="control-label col-sm-2"> Acciones </label>
					<div class="checkbox-inline">
					  <label class="control-label col-sm-4" ><input type="checkbox" name="mail" value="true">Mail</label>
					</div>
					<div class="checkbox-inline ">
					  <label class="control-label col-sm-10"><input type="checkbox" name="report" value="true">Report</label>
					</div>
					<div class="checkbox-inline">
					  <label class="control-label col-sm-16" ><input type="checkbox" name="search Metrics" value="true">SearchMetrics</label>
					</div>
					<div class="checkbox-inline">
					  <label class="control-label col-sm-22" ><input type="checkbox" name="terminal Report" value="true">TerminalReport</label>
					</div>
				</div>
		
		</div>
				<div class="panel-footer text-right">
					<button class="btn btn-success" type="submit">Registrar</button>
					<a href="/admin" class="btn btn-warning">Cancelar</a>
				</div>
		</div>
		</div>
</form>

{{/partial}}

